{
    "version": "2.0.0",
    "tasks": [
      {
          "label": "start server",
          "type": "shell",
          "isBackground": true,
          "command": "npm run dev",
          "problemMatcher": [{
            "pattern": [{
              "regexp": ".",
              "file": 1,"line": 1,
              "column": 1,"message": 1
            }],
            "background": {
                "activeOnStart": true,
                "beginsPattern": { "regexp": "." },
                "endsPattern": { "regexp": "." }
            },
          }]
      },
      {
          "label": "stop server",
          "command": "echo ${input:terminate}",
          "type": "shell"
      },
    ],
    "inputs": [{
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }]
  }
